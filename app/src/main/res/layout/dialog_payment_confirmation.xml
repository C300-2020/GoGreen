<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="390dp"
    android:layout_margin="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="390dp">


        <TextView
            android:id="@+id/titleConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Are you sure?"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleConfirm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="89dp"
            android:gravity="center|center_vertical"
            android:text="You are paying"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_payment_title_reciever"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:gravity="center|center_vertical"
            android:text="TextView"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="#EDEDED"
                android:text="No"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6CAADB"
                android:text="Yes"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_payment_amount"
            android:layout_width="166dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_payment_title_reciever"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="98dp"
            android:gravity="center|center_vertical"
            android:text="TextView"
            android:textSize="24sp" />


    </RelativeLayout>
</LinearLayout>



