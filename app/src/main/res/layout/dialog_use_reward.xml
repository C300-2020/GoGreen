<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="420dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp">


        <TextView
            android:id="@+id/titleUseReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM REDEMPTION?"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/rewardImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/titleUseReward"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/rookiebadge"/>

        <TextView
            android:id="@+id/rewardTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleUseReward"
            android:textAlignment="center"
            android:text="$5 Banana Centre eVoucher"
            android:textSize="14dp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp" />

        <TextView
            android:id="@+id/titleExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires On"
            android:layout_below="@id/rewardImg"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Feb 2020"
            android:layout_below="@id/rewardImg"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExpiryDate"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Once 'Yes' is clicked. Reward will be used and there will be no refunds"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2">

            <Button
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:text="No"
                android:textStyle="bold"
                android:background="#EDEDED"/>

            <Button
                android:id="@+id/btnYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:background="#6CAADB"
                android:textColor="#fff"
                android:textStyle="bold"/>

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>